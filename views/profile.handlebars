<div class="container pagediv">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <img class="img-responsive img-circle users" src="http://res.cloudinary.com/dttf46owb/image/upload/v1503147377/user_photos/{{user.usn}}.jpg" onerror="this.src='images/no-image-icon.png'" alt="User_Image" >

        <a href="#" id="upload_widget_opener">Upload</a>
        <br>
        <div class="alert alert-danger fade in" id="close">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Warning!</strong> Upload allowed only once
        </div>
        <div class="alert alert-success fade in" id="uploaded" style="display:none">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
             Upload finished!
        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Use this to show important messages to the user.
        </div>
        <h3>Personal info</h3>
        
        <form class="form-horizontal" role="form" method="post" action="/profile">
          <div class="form-group">
            <label class="col-lg-3 control-label">First name:</label>
            <div class="col-lg-8">
              <input class="form-control" name="fname" type="text" value="{{user.fname}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Last name:</label>
            <div class="col-lg-8">
              <input class="form-control" name="lname" type="text" value="{{user.lname}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" name="email" type="text" value="{{user.email}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Username:</label>
            <div class="col-md-8">
              <input class="form-control" type="text" value="{{user.username}}" disabled>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <input class="form-control" name="password" type="password" value="{{user.password}}" disabled>
            </div>
          </div>          
          <div class="form-group">
            <label class="col-md-3 control-label">Bio:</label>
            <div class="col-md-8">
              <textarea class="form-control" name="bio" maxlength="300" placeholder="Tell something about yourself"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>

        </form>
      </div>
  </div>
</div>
<hr>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script type="text/javascript">  

  $('#upload_widget_opener').cloudinary_upload_widget(
    { 
      cloud_name: 'dttf46owb', 
      upload_preset: 'hlinckko', 
      folder: 'user_photos',
      multiple: false,
      sources: ['local'],
      public_id: '{{user.usn}}',
      button_caption: 'Profile Picture Upload',
      max_file_size: 1000000,
      show_powered_by: false
    },function(error, result) { 
      console.log(error, result);
      if(result)
        document.getElementById('uploaded').style.display="block";
        document.getElementById('close').style.display="none";
    });
</script>  
