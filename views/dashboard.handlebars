        <div id="home" class="tab-pane fade in active">
        <hr>
          {{#each eventlist}}
          <ul class="event-list">
            <li>
              <time datetime="{{this.date}}">
                <span class="day">
                <script type="text/javascript">
                  document.write("{{this.date}}".split("-")[0]);
                </script></span>
                <span class="month">
                  <script type="text/javascript">
                    var d = "{{this.date}}".split("-");
                    var dateHash = {1:'Jan',2:'Feb',3:'Mar',4:'Apr',5:'May',6:'Jun',7:'Jul',8:'Aug',9:'Sep',10:'Oct',11:'Nov',12:'Dec'};
                    document.write(dateHash[parseInt(d[1])]);
                  </script>
                </span>
                <span class="year">
                  <script type="text/javascript">
                    document.write("{{this.date}}".split("-")[2]);
                  </script>
                </span>
                <span>{{this.date}}</span>
              </time>
              <img src="{{this.posterurl}}" onerror="this.src = 'images/logo-sq fixed.png'"/>
              <div class="info">
                <p class="event-title">{{this.name}}</p>
                <p class="event-desc">{{this.description}}</p>
                <ul>
                  <li style="width:33%;">Register <span class="fa fa-user-plus"></span></li>
                  <li style="width:34%;">{{this.regcount}} <span class="fa fa-user"></span></li>
                  {{!-- <li style="width:33%;">103 <span class="fa fa-envelope"></span></li> --}}
                </ul>
              </div>
            </li>
          </ul>
          {{/each}}
